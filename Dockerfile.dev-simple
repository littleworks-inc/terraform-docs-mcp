# Simple Development Dockerfile for Terraform Docs MCP Server
FROM node:18-alpine AS development

# Install development tools
RUN apk add --no-cache \
    git \
    bash \
    curl

# Install nodemon and tsx globally for hot reload
RUN npm install -g nodemon tsx

# Set working directory
WORKDIR /app

# Copy package files first (for better caching)
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code BEFORE building
COPY src/ ./src/

# Build the application for testing
RUN npm run build

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S terraform-mcp -u 1001

# Change ownership
RUN chown -R terraform-mcp:nodejs /app
USER terraform-mcp

# Expose port for debugging (optional)
EXPOSE 3000

# Development command with hot reload
# Build first, then watch for changes
CMD ["sh", "-c", "echo 'Building application...' && npm run build && echo 'Starting development server...' && tsx watch src/index.ts"]