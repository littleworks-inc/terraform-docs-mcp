{
  "name": "terraform-docs-mcp",
  "version": "0.2.0",
  "description": "MCP server for Terraform documentation, configuration generation, and module conversion",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "convert": "ts-node scripts/convert-to-module.ts"
  },
  "bin": {
    "terraform-docs-mcp": "./dist/index.js",
    "terraform-module-converter": "./dist/scripts/convert-to-module.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "axios": "^1.6.5",
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^2.7.0",
    "stream-browserify": "^3.0.0",
    "web-streams-polyfill": "^3.3.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.12",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": ["**/__tests__/**/*.test.ts"]
  }
}